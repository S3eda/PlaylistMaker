<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorite_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_left_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/playlist_fragment_start" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_write_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/playlist_fragment_start" />

    <Button
        android:id="@+id/add_playlist_button"
        style="@style/clearHistory_new_playlist_button_style"
        android:text="@string/add_new_playlist"
        android:layout_marginTop="@dimen/playlist_fragment_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <ImageView
        android:id="@+id/empty_mediateca_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/playlist_fragment_emptyImage_top"
        android:src="@drawable/empty_search"
        app:layout_constraintTop_toBottomOf="@id/add_playlist_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/empty_mediateca_text"
        style="@style/textStyle_YSmedium_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/playlist_fragment_emptyText_top"
        app:layout_constraintStart_toEndOf="@id/fragment_left_line"
        app:layout_constraintEnd_toStartOf="@id/fragment_write_line"
        app:layout_constraintTop_toBottomOf="@id/empty_mediateca_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_19"
        android:text="@string/no_playlist"
        android:lines="2"
        android:textAlignment="center" />

</androidx.constraintlayout.widget.ConstraintLayout>