<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_activity_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/ever_white</item>
        <item name="android:textColor">@color/ever_black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/main_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">@color/ever_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settings_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_string_height</item>
        <item name="android:layout_marginStart">@dimen/settings_text_start</item>
        <item name="android:layout_marginEnd">@dimen/settings_text_end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="settings_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="back_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/back_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="back_image">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:src">@drawable/back</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="back_bar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="track_info_style">
        <item name="android:textSize">@dimen/recycler_view_info_textSize</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="track_name_style">
        <item name="android:textSize">@dimen/recycler_view_songName_textSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="something_wrong_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/something_wrong_image_top</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="refresh_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/refresh_button_width</item>
        <item name="android:layout_height">@dimen/refresh_button_height</item>
        <item name="android:layout_marginTop">@dimen/refresh_button_marginTop</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cornerRadius">@dimen/refresh_button_cornerRadius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:text">@string/refresh</item>
        <item name="android:textSize">@dimen/refresh_button_textSize</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="something_wrong_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">224dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textStyle_YSmedium_500">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="textStyle_YSmedium_400">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="textStyle_YSregular_500">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="textStyle_YSregular_400">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="clearHistory_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/clearHistory_button_width</item>
        <item name="android:layout_height">@dimen/clearHistory_button_height</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:text">@string/clear_history</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/clearHistory_button_textSize</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_marginTop">@dimen/clearHistory_button_marginTop</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cornerRadius">@dimen/clearHistory_button_cornerRadius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="song_page_information_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/ever_gray</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="song_page_item_value_information">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>